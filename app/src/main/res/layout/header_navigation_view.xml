<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/ic_header_back"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130dp"
        android:layout_marginTop="10dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:scaleType="centerCrop"
        android:id="@+id/user_profile_picIV_header" />
    <TextView
        android:id="@+id/user_nameTV_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/user_profile_picIV_header"
        android:gravity="center"
        android:text="dummy name "
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_emailTV_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_nameTV_header"
        android:gravity="center"
        android:text="dummy email"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>